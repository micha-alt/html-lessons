extends ../../layout/presentations

block title
    title Standard-Elemente - HTML Schulung

block content
    #Start.pikSlide
        h2 Kategorisierung der Tags
        div.link
            span Link:
            a(href='http://docs.webplatform.org/wiki/html/elements',target='_blank') developer.mozilla.org (MDN)
        ul
            li Block-Level Elemente
            li Inline Elemente
            li Tabellen
            li Listen
            li Formulare
            li Anker, Images
    .pikSlide
        h2 Block-Level Elemente
        div.link
            span Link:
            a(href='https://developer.mozilla.org/en-US/docs/HTML/Block-level_elements',target='_blank') developer.mozilla.org (MDN)
        ul
            li div
            li p
            li table, form, ul, ol, dl
            li blockquote, address, canvas
            li h1, h2, h3, h4, h5, h6
    .pikSlide
        h2 Inline Elemente
        div.link
            span Link:
            a(href='https://developer.mozilla.org/en-US/docs/HTML/Inline_elements',target='_blank') developer.mozilla.org
        ul
            li b, big, i, small, tt
            li abbr, acronym, cite, code, dfn, em, kbd, strong, samp, var
            li a, bdo, br, img, map, object, q, script, span, sub, sup
            li button, input, label, select, textarea
    .pikSlide
        h2 Tabellen
        div.link
            span Link:
            a(href='http://docs.webplatform.org/wiki/guides/html_tables',target='_blank') webplatform.org
        ul
            li table
            li tr, th, td
            li caption, summary
            li thead, tfoot, tbody
    .pikSlide
        h2 Listen
        div.link
           span Link:
           a(href='http://docs.webplatform.org/wiki/guides/html_lists',target='_blank') webplatform.org
        ul
           li ul, li
           li ol, li
           li dl, dt, dd
    .pikSlide
        h2 Formulare
        div.link
            span Link:
            a(href='http://docs.webplatform.org/wiki/guides/html_forms_basics',target='_blank') webplatform.org
        div.link
            span Link:
            a(href='https://developer.mozilla.org/en-US/docs/Web/Guide/HTML/Forms',target='_blank') developer.mozilla.org
            ul
                li form
                li label, input, textarea, select
                li fieldset, legend
